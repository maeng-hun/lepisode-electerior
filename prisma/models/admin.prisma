// 임시 및 테스트 관리자 회원 테이블
model Admin {
  id             String      @id @default(cuid(2))
  email          String      @unique
  password       String
  name           String?
  nickname       String?     @unique
  phone          String?
  role           AdminRole   @default(ADMIN)
  status         AdminStatus @default(정상)
  profileImage   File?       @relation(fields: [profileImageID], references: [id], onDelete: Cascade)
  profileImageID String?     @unique
  refreshToken   String?

  loginFailedCount Int       @default(0)
  locked           Boolean   @default(false)
  lockedAt         DateTime?
  lockedReason     String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  jobOpenings JobOpening[] /// ADMIN : JobOpening = 1 : N
  banners     Banner[]
  
  places Place[]
  notices Notice[]
  faqs Faq[]

  notifications Notification[]
}

enum AdminRole {
  SUPER_ADMIN
  ADMIN
  USER
}

enum AdminStatus {
  정상
  차단
}
