model Place {
    id String @id @default(cuid(2))
    isExposed Boolean @default(false)
    name String
    category PlaceCategory
    postCode String? 
    contact String?
    link String?
    content String?
    guideTitle String?
    guideContent String?
    detailTitle String?
    detailContent String?
    province String
    district String
    gpsX Int
    gpsY Int
    mapLevel Int
    createdAt DateTime @default(now()) 
    updatedAt DateTime @updatedAt
    deletedAt DateTime? 
    order Int

    adminId String
    admin   Admin   @relation(fields: [adminId], references: [id])

    imageId String? @unique
    image   File? @relation(fields: [imageId], references: [id])

    memos Memo[] 

    trips   Trip[] @relation("TripPlaces")
    favoritedBy User[] @relation("PlaceFavorites")
}

enum PlaceCategory {
  RESTAURANT      // 음식점
  CULTURAL_FACILITY // 문화시설
  FESTIVAL_EVENT  // 축제·공연·행사
  LEISURE_SPORTS  // 레포츠
  ACCOMMODATION   // 숙박
  TOURIST_ATTRACTION // 관광지
}
